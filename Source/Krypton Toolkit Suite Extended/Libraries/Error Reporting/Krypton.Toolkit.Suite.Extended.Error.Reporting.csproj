  <!--Stable NuGet packages-->
  <ItemGroup>
    <PackageReference Include="Krypton.Navigator" Version="5.550.2106" />
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2106" />
  </ItemGroup>

  <!--Canary NuGet package configuration-
  <ItemGroup>
    <PackageReference Include="Krypton.Navigator.Canary" Version="6.0.2106" />
