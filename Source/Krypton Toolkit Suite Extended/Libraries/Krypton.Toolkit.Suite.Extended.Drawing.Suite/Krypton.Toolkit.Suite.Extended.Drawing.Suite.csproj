    <!--Nightly icon-->
    <None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Controls\User Controls\Colour Sliders\**" />
    <EmbeddedResource Remove="Controls\User Controls\Colour Sliders\**" />
