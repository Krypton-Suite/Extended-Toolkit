  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cyotek.Windows.Forms.ColorPicker" Version="1.7.2" />
  </ItemGroup>

  <ItemGroup>
    <!--Canary icon-->
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />

    <!--Stable icon-->
