  <ItemGroup>
    <!--Canary icon-->
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />

    <!--Stable icon-->
    <None Include="Package Icons\Stable.png" Pack="true" PackagePath="\" />

    <!--Nightly icon-->
    <None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Images\AllToolkitImageResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>AllToolkitImageResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Images\AllToolkitImageResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>AllToolkitImageResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Resources\Krypton.Toolkit.Suite.Extended.Resources.xml</DocumentationFile>
