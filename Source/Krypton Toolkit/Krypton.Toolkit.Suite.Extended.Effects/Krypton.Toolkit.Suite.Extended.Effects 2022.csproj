<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Effects</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Effects</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Configurations>Debug;Release;Nightly;Canary;Stable</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <PropertyGroup>
              <PackageId>Krypton.Toolkit.Suite.Extended.Effects.Canary</PackageId>
          </PropertyGroup>
      </When>
      <Otherwise>
          <PropertyGroup>
              <PackageId>Krypton.Toolkit.Suite.Extended.Effects</PackageId>
          </PropertyGroup>
      </Otherwise>
  </Choose>

  <PropertyGroup>
    <Description>An extension to the Krypton standard toolkit. This package implements additional effects, to be used in conjunction with the standard toolkit.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Release'">
          <PropertyGroup>
              <LangVersion>preview</LangVersion>
          </PropertyGroup>

          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="60.22.2.32" />
          </ItemGroup>
      </When>
      <Otherwise>
          <PropertyGroup>
              <LangVersion>preview</LangVersion>
          </PropertyGroup>

          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2201.1-beta" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Effects\Krypton.Toolkit.Suite.Extended.Effects.xml</DocumentationFile>
    <OutputPath>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Effects\</OutputPath>
  </PropertyGroup>

</Project>
