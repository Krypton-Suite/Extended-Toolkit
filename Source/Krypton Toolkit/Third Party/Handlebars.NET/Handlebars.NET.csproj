<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net45;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
    <TargetFrameworks Condition="'$(TFMs)' == 'all'">net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <RootNamespace>HandlebarsDotNET</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Rex Morgan</Authors>
    <Copyright>Copyright © 2014-2020 Rex Morgan</Copyright>
    <Description>Blistering-fast Handlebars.js templates in your .NET application.</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!--Version configuration-->
  <PropertyGroup>
    <AssemblyVersion>1.11.5</AssemblyVersion>
    <FileVersion>1.11.5</FileVersion>
    <Version>1.11.5</Version>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Third Party\Handlebars.NET\Handlebars.NET.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Third Party\Handlebars.NET\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ExpressionShortcuts" Version="1.0.4.39" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.ComponentModel.TypeConverter" Version="4.3.0" />
    <PackageReference Include="System.Diagnostics.Contracts" Version="4.3.0" />
  </ItemGroup>

</Project>
