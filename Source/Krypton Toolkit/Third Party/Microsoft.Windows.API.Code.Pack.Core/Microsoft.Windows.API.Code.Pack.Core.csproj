<Project Sdk="Microsoft.NET.Sdk">

  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Microsoft.Windows.API.Code.Pack.Core</RootNamespace>
    <AssemblyName>Microsoft.Windows.API.Code.Pack.Core</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Third Party\Microsoft.Windows.API.Code.Pack.Core\Microsoft.Windows.API.Code.Pack.Core.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Third Party\Microsoft.Windows.API.Code.Pack.Core\</OutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyVersion>6.0.0</AssemblyVersion>
    <FileVersion>6.0.0</FileVersion>
    <Version>6.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Resources\LocalizedMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>LocalizedMessages.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\LocalizedMessages.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>LocalizedMessages.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
