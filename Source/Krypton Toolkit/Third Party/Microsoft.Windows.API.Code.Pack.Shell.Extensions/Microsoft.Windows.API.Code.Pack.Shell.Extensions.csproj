<Project Sdk="Microsoft.NET.Sdk">

  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Microsoft.Windows.API.Code.Pack.Shell.Extensions</RootNamespace>
    <AssemblyName>Microsoft.Windows.API.Code.Pack.Shell.Extensions</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Third Party\Microsoft.Windows.API.Code.Pack.Shell.Extensions\Microsoft.Windows.API.Code.Pack.Shell.Extensions.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Third Party\Microsoft.Windows.API.Code.Pack.Shell.Extensions\</OutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyVersion>6.0.0</AssemblyVersion>
    <FileVersion>6.0.0</FileVersion>
    <Version>6.0.0</Version>
  </PropertyGroup>

</Project>
