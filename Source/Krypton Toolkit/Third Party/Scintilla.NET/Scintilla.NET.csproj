<Project Sdk="Microsoft.NET.Sdk">

  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  
  <PropertyGroup>   
    <LangVersion>latest</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Scintilla.NET</RootNamespace>
    <AssemblyName>Scintilla.NET</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

</Project>
