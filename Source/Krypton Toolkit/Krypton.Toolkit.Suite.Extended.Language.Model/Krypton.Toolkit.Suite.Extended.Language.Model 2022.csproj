<Project Sdk="Microsoft.NET.Sdk">

	<Choose>
		<When Condition="'$(Configuration)' == 'Nightly'">
			<PropertyGroup>
				<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows;net7.0-windows</TargetFrameworks>
			</PropertyGroup>
		</When>
		<Otherwise>
			<Choose>
				<When Condition="'$(Configuration)' == 'Canary'">
					<PropertyGroup>
						<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
					</PropertyGroup>
				</When>
				<Otherwise>
					<Choose>
						<When Condition="'$(Configuration)' == 'StableFull'">
							<PropertyGroup>
								<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
							</PropertyGroup>
						</When>
						<Otherwise>
							<Choose>
								<When Condition="'$(Configuration)' == 'StableLite'">
									<PropertyGroup>
										<TargetFrameworks>net48;netcoreapp3.1;net6.0-windows</TargetFrameworks>
									</PropertyGroup>
								</When>
								<Otherwise>
									<Choose>
										<When Condition="'$(Configuration)' == 'SignedFull'">
											<PropertyGroup>
												<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
											</PropertyGroup>
										</When>
										<Otherwise>
											<Choose>
												<When Condition="'$(Configuration)' == 'SignedLite'">
													<PropertyGroup>
														<TargetFrameworks>net48;netcoreapp3.1;net6.0-windows</TargetFrameworks>
													</PropertyGroup>
												</When>
											</Choose>
										</Otherwise>
									</Choose>
								</Otherwise>
							</Choose>
						</Otherwise>
					</Choose>
				</Otherwise>
			</Choose>
		</Otherwise>
	</Choose>

	<PropertyGroup>
		<OutputType>library</OutputType>
		<RootNamespace>Krypton.Toolkit.Suite.Extended.Language.Model</RootNamespace>
		<AssemblyName>Krypton.Toolkit.Suite.Extended.Language.Model</AssemblyName>
		<UseWindowsForms>true</UseWindowsForms>
		<Configurations>Debug;Release;Nightly;Canary;StableFull;StableLite;SignedFull;SignedLite</Configurations>
	</PropertyGroup>

	<!--Package Data-->
	<Choose>
		<When Condition="'$(Configuration)' == 'Canary'">
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Language.Model.Canary</PackageId>
			</PropertyGroup>
		</When>

		<When Condition="'$(Configuration)' == 'Nightly'">
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Language.Model.Nightly</PackageId>
			</PropertyGroup>
		</When>

		<When Condition="'$(Configuration)' == 'Signed'">
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Language.Model.Signed</PackageId>
			</PropertyGroup>
		</When>
		<Otherwise>
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Language.Model</PackageId>
			</PropertyGroup>
		</Otherwise>
	</Choose>

	<PropertyGroup>
		<Description>
			An extension to the Standard Toolkit, which supports .NET Framework 4.6.2 - 4.8, .NET Core 3.1 and .NET 5/6. This package implements language options for certain Krypton button controls.

			This package supports all .NET Framework versions starting .NET Framework 4.6.2 - 4.8, .NET Core 3.1 and .NET 5/6.
			Also, all libraries are included targeting each specific framework version for performance purposes.

			To view all of the extended toolkit package latest version information, please visit: https://github.com/Krypton-Suite/Krypton-Toolkit-Suite-Version-Dashboard/blob/main/Documents/Modules/Extended/Krypton-Toolkit-Suite-Extended-Modules.md
		</Description>
	</PropertyGroup>

	<Choose>
		<When Condition="'$(SolutionName.Endswith(`NuGet`))'">
			<Choose>
				<When Condition="'$(Configuration)' == 'Nightly'">
					<PropertyGroup>
						<LangVersion>preview</LangVersion>
					</PropertyGroup>

					<ItemGroup>
						<PackageReference Include="Krypton.Toolkit.Nightly" Version="65.22.4.110-alpha" />
					</ItemGroup>
				</When>
				<Otherwise>
					<Choose>
						<When Condition="'$(Configuration)' == 'Canary'">
							<PropertyGroup>
								<LangVersion>preview</LangVersion>
							</PropertyGroup>

							<ItemGroup>
								<PackageReference Include="Krypton.Toolkit.Canary" Version="65.22.4.103-beta" />
							</ItemGroup>
							</When>
							<Otherwise>
								<Choose>
									<When Condition="'$(Configuration)' == 'Signed'">
										<PropertyGroup>
											<LangVersion>preview</LangVersion>
										</PropertyGroup>

										<ItemGroup>
											<PackageReference Include="Krypton.Toolkit.Signed" Version="60.22.4.4" />
										</ItemGroup>
									</When>
									<Otherwise>
										<PropertyGroup>
											<LangVersion>preview</LangVersion>
										</PropertyGroup>

										<ItemGroup>
											<PackageReference Include="Krypton.Toolkit" Version="60.22.2.32" />
										</ItemGroup>
									</Otherwise>
								</Choose>
							</Otherwise>
					</Choose>
				</Otherwise>
			</Choose>
			</When>
		<Otherwise>
			<ItemGroup>
				<ProjectReference Include="..\..\..\Standard-Toolkit\Source\Krypton Components\Krypton.Toolkit\Krypton.Toolkit 2022.csproj" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<!--Binary/Documentation Output-->
	<PropertyGroup>
		<DocumentationFile>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Language.Model\Krypton.Toolkit.Suite.Extended.Language.Model.xml</DocumentationFile>
		<OutputPath>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Language.Model\</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Krypton.Toolkit.Suite.Extended.Developer.Utilities\Krypton.Toolkit.Suite.Extended.Developer.Utilities 2022.csproj" />
		<ProjectReference Include="..\Krypton.Toolkit.Suite.Extended.Tools\Krypton.Toolkit.Suite.Extended.Tools 2022.csproj" />
	</ItemGroup>

</Project>
