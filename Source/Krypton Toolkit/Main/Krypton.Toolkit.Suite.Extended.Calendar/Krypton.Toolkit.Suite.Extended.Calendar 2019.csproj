<Project Sdk="Microsoft.NET.Sdk">

  <!--Setup TFMs for all projects-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Calendar</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Calendar</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Calendar</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package holds extensions to the Krypton.Calendar module.</Description>
  </PropertyGroup>

  <!--Version Information-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2108</AssemblyVersion>
    <FileVersion>6.0.2108</FileVersion>
  </PropertyGroup>

  <!--Krypton Toolkit Import-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106.2" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2106.2" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Calendar\Krypton.Toolkit.Suite.Extended.Calendar.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Calendar\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Krypton.Toolkit.Suite.Extended.Tools\Krypton.Toolkit.Suite.Extended.Tools 2019.csproj" />
  </ItemGroup>

</Project>